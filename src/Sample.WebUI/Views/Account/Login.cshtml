@model Sample.WebUI.Models.Account.AccountLoginViewModel

<form method="post">
    <div class="mb-3">
        <label for="email" class="form-label">E-Posta Adresi</label>
        <input type="email" class="form-control" id="email" asp-for="Email" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Şifre</label>
        <input type="password" class="form-control" id="password" asp-for="Password" required>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" asp-for="RememberMe" id="rememberMe">
        <label class="form-check-label" for="rememberMe">Oturum açık kalsın</label>
    </div>
    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>
<div class="text-danger p-2">
    @Html.ValidationSummary()
</div>